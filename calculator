	box-shadow: 0 1px 0 rgba(255, 255, 255, .25), 0 -1px 0 rgba(0, 0, 0, .25), inset 0 0 3px rgba(0, 0, 0, .6), inset 0 0 30px -5px rgba(0, 0, 0, .2);
	-webkit-box-shadow: 0 1px 0 rgba(255, 255, 255, .25), 0 -1px 0 rgba(0, 0, 0, .25), inset 0 0 3px rgba(0, 0, 0, .6), inset 0 0 30px -5px rgba(0, 0, 0, .2);
	-moz-box-shadow: 0 1px 0 rgba(255, 255, 255, .25), 0 -1px 0 rgba(0, 0, 0, .25), inset 0 0 3px rgba(0, 0, 0, .6), inset 0 0 30px -5px rgba(0, 0, 0, .2);
	-o-box-shadow: 0 1px 0 rgba(255, 255, 255, .25), 0 -1px 0 rgba(0, 0, 0, .25), inset 0 0 3px rgba(0, 0, 0, .6), inset 0 0 30px -5px rgba(0, 0, 0, .2);
	-opera-box-shadow: 0 1px 0 rgba(255, 255, 255, .25), 0 -1px 0 rgba(0, 0, 0, .25), inset 0 0 3px rgba(0, 0, 0, .6), inset 0 0 30px -5px rgba(0, 0, 0, .2);
